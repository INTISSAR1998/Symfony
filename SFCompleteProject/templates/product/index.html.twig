{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!
{% endblock %}


{% block body %}
	<h1>
		List of products</h1>
	<div class="table-responsive-sm">
		<table class="table table-hover table-striped">
			<thead>
				<tr>
					<td>ID</td>
					<td>Nom</td>
					<td>Prix</td>
					<td>Délais consommation</td>
					<td>Catégrie</td>
					<td>Actions</td>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td>{{ product.id}}</td>
						<td>{{ product.nom}}</td>
						<td>{{ product.prix}}
							DT</td>
						<td>{{ product.delais}}
							jours</td>
						<td>{{product.categorie.nom}}</td>
						<td>
							<a class="text-danger" href="{{path("product.delete",{id:product.id})}}">Delete</a>
							<a class="text" href="{{path("product.edit",{id:product.id})}}">Edit</a>

						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
