{% extends 'base.html.twig' %}

{% block title %}List Categories
{% endblock %}


{% block body %}
	<h1>
		List of Categories</h1>
	<div class="table-responsive-sm">
		<table class="table table-hover table-striped">
			<thead>
				<tr>
					<td>ID</td>
					<td>Nom Cat√©gorie</td>
					<td>Actions</td>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						<td>{{ categorie.id}}</td>
						<td>{{ categorie.nom}}</td>
						<td>
							<a class="text-danger" href="{{path("categorie.delete",{id:categorie.id})}}">Delete</a>
							<a class="text" href="{{path("categorie.edit",{id:categorie.id})}}">Edit</a>

						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
