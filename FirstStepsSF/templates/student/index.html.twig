{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!
{% endblock %}

{% block body %}

	<div class="table-responsive-sm">
		<h1>List of all Students : Display all Students</h1>
		<table class="table table-hover table-striped">
			<thead>
				<tr>
					<td>ID</td>
					<td>Name</td>
					<td>Surname</td>
					<td>Email</td>
					<td>Moyenne</td>
					<td>Actions</td>
				</tr>
			</thead>
			<tbody>
				{% for student in students %}
					<tr>
						<td>{{ student.id}}</td>
						<td>{{ student.name}}</td>
						<td>{{ student.surname}}</td>
						<td>{{ student.email}}</td>
						<td>{{ student.moyenne}}</td>
						<td>
							<a class="text-danger" href="{{path("student.delete",{id:student.id}) }}">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
