{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
    <section class="container py-5">
        <div>
            <div class="row">
                <header class="col-12 py-4">
                    <h2 class="text-center">Featured Course</h2>
                </header>
                {% for course in courses %}
                    <div class="col-lg-3 col-md-4 col-sm-12 py-2">
                        <div class="card">
                            <a href="/course/{{ course.title }}"><img alt="Card image cap " class="img-fluid card-img-top "
                                 src="uploads/images/products/{{ course.image }}"
                                 style="height: 257px"></a>
                            <div class="card-body">
                                <h3 class="card-title">{{ course.title }}</h3>
                                <p class="text-muted">{{ course.description }}</p>
                                <p class="text-right" style="color: #3c763d">FREE</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
