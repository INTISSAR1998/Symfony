{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center py-5">Program Catalog</h1>
                <div class="row">
                    <div class="col-3">
                        <h3>All Coursess</h3>
                        <ul>
                            {% for category in category %}
                                <li><a href="#">{{ category.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="col-9">
                        <div class="row">
                            {% for course in courses %}
                                <div class="col-6 py-2">
                                    <div class="card">
                                        <a href="/course/{{ course.title }}"><img alt="Card image cap " class="img-fluid card-img-top "
                                                        src="uploads/images/products/{{ course.image }}"
                                                        style="height: 257px"></a>
                                        <div class="card-body">
                                            <h3 class="card-title">{{ course.title }}</h3>
                                            <p class="text-muted">Ahmed</p>
                                            <p class="text-right" style="color: #3c763d">FREE</p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}
