{% extends 'base.html.twig' %}

{% block title %}Learning Path Courses{% endblock %}

{% block body %}
    <section class="container py-5">
        <div>
            <div class="row">
                <header class="col-12 py-4">
                    <h2 class="text-center">Learning Path Courses</h2>
                </header>
                {% for i in range(1, 12) %}
                    <div class="col-lg-3 col-md-4 col-sm-12 py-2">
                        <div class="card">
                            <img alt="Card image cap " class="img-fluid card-img-top "
                                 src="assets/images/learn-to-code-how-to-start.png"
                                 style="height: 257px">
                            <div class="card-body">
                                <h3 class="card-title">Learn php from scratch</h3>
                                <p class="text-muted">Ahmed</p>
                                <p class="text-right">{{ i }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
